<?php if ($pages = $category->getLandingpages()): ?>
<ul class="list-inline">
    <?php foreach ($pages as $page): ?>
    <li><a class="btn btn-default" href="<?=$this->url('lang/landingpage', ['slug' => $page->getSlug()], true)?>"><?=$page->getName()?></a></li>
    <?php endforeach ?>
</ul>
<?php endif ?>

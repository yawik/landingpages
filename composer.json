{
    "type": "yawik-module",
    "name": "yawik/landingpages",
    "description": "Create Landingpages for job searches to optimize SEO",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathias Gelhausen",
            "email": "gelhausen@cross-solution.de"
        }
    ],
    "keywords": [
        "yawik", "module", "zf3"
    ],
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        },
        "process-timeout": 0
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.2",
        "yawik/core": "^0.33",
        "yawik/jobs": "^0.33"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0",
        "yawik/behat": "^0.32@dev",
        "yawik/composer-plugin": "^1.0",
	"yawik/auth": "^0.33",
	"yawik/organizations": "^0.33",
        "yawik/geo": "^0.33",
        "yawik/applications": "^0.33",
        "yawik/cv": "^0.33",
        "yawik/settings": "^0.33"
    },
    "autoload": {
        "psr-4": { "Landingpages\\": "src/"}
    },
    "autoload-dev": {
	     "psr-4": {
          "LandingpagesTest\\": "test/LandingpagesTest/"
	     }
    },
    "extra": {
        "zf": {
            "module": "Landingpages"
        }
    },
    "scripts": {
        "auto-scripts": [
            "npm install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "serve": "php -S localhost:8000 -t test/sandbox/public",
        "start-selenium": "./vendor/bin/selenium-server-standalone -p 4444 -Dwebdriver.chrome.driver=./vendor/bin/chromedriver",
        "test": "vendor/bin/phpunit"
    }
}
